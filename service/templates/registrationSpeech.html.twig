{% extends 'base.html.twig' %}
{% block header %}
    <div id="kt_header"
         class="kt-header kt-grid__item  kt-header--fixed">
        <div class="container">
            <div class="row pageSpeechHeadRow">
                <div id="timeBegin" class="col-3 pageSpeechHeadCol" data-time="{{ timeNow }}">
                </div>
                <div class="col-6 pageSpeechHeadCol">
                    <h1>Московская городская дума</h1>
                </div>
                <div class="col-3 pageSpeechHeadCol">
                    <div>Сегодня</div>
                    <div>{{ dateNow|date('Y-m-d') }}</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="container listRegistered" id="pageSpeech">
        <div class="row">
            <div id="questionText" class="col-12 pageSpeechQuestion"></div>
        </div>
        <div class="row">
            <h2>Список записавшихся</h2>
        </div>
        <div class="row">
            <div class="col-6">
                <p class="">На выступление:</p>
                <div id="speechList"></div>
            </div>
            <div class="col-6">
                <p>По ведению:</p>
                <div id="managerList"></div>
            </div>
        </div>
        <div id="pageSpeechVoting" class="row" style="display: none">

            <div class="col-12"><p>ИДЁТ ГОЛОСОВАНИЕ</p></div>
            <div id="votingProgressBar"></div>
            <div class="col-12">
                <div class="radial-progress" data-progress="">
                    <div class="circle">
                        <div class="mask full">
                            <div class="fill"></div>
                        </div>
                        <div class="mask half">
                            <div class="fill"></div>
                            <div class="fill fix"></div>
                        </div>
                        <div class="shadow"></div>
                    </div>
                    <div class="inset">
                        <div class="percentage">
                            <div class="numbers">
                                <span>-</span><span>0%</span><span>1%</span><span>2%</span><span>3%</span><span>4%</span><span>5%</span><span>6%</span><span>7%</span><span>8%</span><span>9%</span><span>10%</span><span>11%</span><span>12%</span><span>13%</span><span>14%</span><span>15%</span><span>16%</span><span>17%</span><span>18%</span><span>19%</span><span>20%</span><span>21%</span><span>22%</span><span>23%</span><span>24%</span><span>25%</span><span>26%</span><span>27%</span><span>28%</span><span>29%</span><span>30%</span><span>31%</span><span>32%</span><span>33%</span><span>34%</span><span>35%</span><span>36%</span><span>37%</span><span>38%</span><span>39%</span><span>40%</span><span>41%</span><span>42%</span><span>43%</span><span>44%</span><span>45%</span><span>46%</span><span>47%</span><span>48%</span><span>49%</span><span>50%</span><span>51%</span><span>52%</span><span>53%</span><span>54%</span><span>55%</span><span>56%</span><span>57%</span><span>58%</span><span>59%</span><span>60%</span><span>61%</span><span>62%</span><span>63%</span><span>64%</span><span>65%</span><span>66%</span><span>67%</span><span>68%</span><span>69%</span><span>70%</span><span>71%</span><span>72%</span><span>73%</span><span>74%</span><span>75%</span><span>76%</span><span>77%</span><span>78%</span><span>79%</span><span>80%</span><span>81%</span><span>82%</span><span>83%</span><span>84%</span><span>85%</span><span>86%</span><span>87%</span><span>88%</span><span>89%</span><span>90%</span><span>91%</span><span>92%</span><span>93%</span><span>94%</span><span>95%</span><span>96%</span><span>97%</span><span>98%</span><span>99%</span><span>100%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="votingTime" class="col-12 votingTimeGo"></div>
        </div>
        {#<div id="tableVoting" class="row" style="display: none">#}

    </div>
    <div id="tableVoting" class="container" style="display: none">
        <div class="row">
            <div class=" col-12">
                <div id="tableQuestionText" class="pageSpeechQuestion"></div>
            </div>
            <div class=" col-12">
                <div id="tableQuestionVoting" class="pageSpeechVoting"></div>
            </div>
            <div class=" col-12">
                <table class="table">
                    <tbody>
                    <tr>
                        <th class="title">{{ 'voting_labels.amount_of_agree' | trans | upper }}</th>
                        <td>
                            <div id="tableAgree"></div>
                        </td>
                    </tr>
                    <tr>
                        <th class="title">{{ 'voting_labels.amount_of_disagree' | trans | upper }}</th>
                        <td>
                            <div id="tableDisagree"></div>
                        </td>
                    </tr>
                    <tr>
                        <th class="title">{{ 'voting_labels.amount_of_neutral' | trans | upper }}</th>
                        <td>
                            <div id="tableNeutral"></div>
                        </td>
                    </tr>
                    <tr>
                        <th class="title">{{ 'voting_labels.amount_of_ignore' | trans | upper }}</th>
                        <td>
                            <div id="tableIgnore"></div>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div id="votingEmployee" class="container" style="display: none">
        <div class="row">
            <div class=" col-12">
                <div id="votingEmployeeQuestion" class="votingEmployeeTitle"></div>
            </div>
            <div class=" col-12">
                <div id="votingEmployeeGroup" class="votingEmployeeGroup"></div>
            </div>
            <div class=" col-12">
                <div id="votingEmployeeTitle" class="votingEmployeeTitle"></div>
            </div>
        </div>
        <div id="employees" class="row"></div>
    </div>
{% endblock %}
